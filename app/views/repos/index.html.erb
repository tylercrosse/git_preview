<div class="container">
  <h1 class="pageTitle"><%= @user.nickname %> / Repos</h1>
  <table class="repoTable">
    <tr>
      <th>Repo</th>
      <th></th>
      <th>Owner</th>
      <th>Updated</th>
      <th>Pushed</th>
    </tr>
    <% @repos.each do |repo| %>
    <tr>
      <td colspan="1"></td>
      <td><%= link_to repo.name, user_repo_commits_path(@user.id, repo)%></td>
      <td><img class="avatar-20" src="<%= repo.owner_avatar_url %>" alt="Image of <%= repo.name %>"><%= repo.owner %></td>
      <td><%= time_ago_in_words(repo.git_updated_at) %> ago</td>
      <td><%= time_ago_in_words(repo.git_pushed_at) %> ago</td>
    </tr>
    <% end %>
  </table>
</div><!-- /container -->
