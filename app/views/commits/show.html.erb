<div class="commit-show-nav top">
  <div class="nav-container">
    <%= link_to user_repo_commits_path(@user, @repo), title: '' do %>
      <div class="commit-show-nav-item commit-button"> Commit Index</div>
    <% end %>
    <div class="commit-info">
      <img class="avatar-20" src="<%= @commit.committer_avatar_url %>" alt="Image of <%= @commit.committer_name %>">
      <%= @commit.committer_name %> -
      <%= time_ago_in_words(@commit.committer_date) %> ago
    </div>
    <%= link_to @commit.html_url, title: '', :target => "_blank" do %>
      <div class="nav-right commit-show-nav-item">View on Github</div>
    <% end %>
    <p class="commit-message">" <%= @commit.commit_message %> "</p>
  </div><!-- /container -->
</div>

<img class="commit-show-image" src="<%= @commit.screenshot %>" alt="Commit Image">

<div class="commit-show-nav bottom">
  <div class="commit-nav-container">
    <div class="nav-left">
      <% if @next_commit %>
        <%= link_to user_repo_commit_path(@user, @repo, @next_commit), title: '' do %>
          <div class="commit-show-nav-item"> <- Next Commit</div>
        <% end %>
      <% end %>
    </div>
    <%= link_to edit_user_repo_commit_path(@user,@repo,@commit), title: '' do %>
      <div class="commit-show-nav-item commit-button">Change Image</div>
    <% end %>
    <div class="nav-right">
      <% if @previous_commit %>
        <%= link_to user_repo_commit_path(@user, @repo, @previous_commit), title: '' do %>
          <div class="commit-show-nav-item">Previous Commit -> </div>
        <% end %>
      <% end %>
    </div>
  </div><!-- /container -->
</div>
